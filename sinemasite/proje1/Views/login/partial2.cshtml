<div id="small-dialog" class="mfp-hide book-form">
    <div class="login-form login-form-left">
        <div class="agile-row">
            <h3>Kullanıcı Girişi</h3>
            <span class="fa fa-lock"></span>
            <div class="clear"></div>
            <div class="login-agileits-top">
                @using (Html.BeginForm("partial2", "login", FormMethod.Post))
                {
                    <input type="email" class="name" name="carimail" Placeholder="Mail Adresi" required="" />
                    <input type="password" class="password" name="carisifre" Placeholder="Şifre" required="" />
                    <input type="submit" value="Giriş Yap">
                }
            </div>
            <div class="login-agileits-bottom">
                <h6><a href="#">Şifremi Unuttum</a></h6>
            </div>
        </div>
    </div>

</div>