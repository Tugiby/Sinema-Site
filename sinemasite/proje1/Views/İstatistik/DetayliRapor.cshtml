@{
    ViewBag.Title = "Detaylı Rapor";
    Layout = "~/Views/Shared/adminlayout.cshtml";
}

<div class="container-fluid">
    <!-- Üst Kartlar -->
    <div class="row mb-4">
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                En Çok Bilet Alan Müşteri
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.EnCokBiletAlanMusteri</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-trophy fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Günlük Ortalama Satış
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.GunlukOrtalamaSatis.ToString("C2")</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-chart-line fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                BUGÜNKÜ TOPLAM HASILAT
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @{
                                    var hasilat = ViewBag.BugunToplam;
                                    @hasilat.ToString("C2")
                                }
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @*toplam film sayısı*@
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            TOPLAM FİLM SAYISI
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                            @ViewBag.ToplamFilm
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-film fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- Günlük Rapor -->
    <div class="card mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Günlük Rapor</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <div class="small font-weight-bold">Bilet Sayısı: <span class="float-right">@ViewBag.GunlukRapor.BiletSayisi</span></div>
                </div>
                <div class="col-md-3">
                    <div class="small font-weight-bold">Film Sayısı: <span class="float-right">@ViewBag.GunlukRapor.SatilanFilmSayisi</span></div>
                </div>
                <div class="col-md-3">
                    <div class="small font-weight-bold">Salon Sayısı: <span class="float-right">@ViewBag.GunlukRapor.KullanilanSalonSayisi</span></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Kategori Raporu -->
    <div class="card">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Kategori Raporu</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Kategori</th>
                            <th>Film Sayısı</th>
                            <th>Satılan Bilet</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var kategori in ViewBag.KategoriRapor)
                        {
                            <tr>
                                <td>@kategori.Kategoriad</td>
                                <td>@kategori.FilmSayisi</td>
                                <td>@kategori.SatilanBilet</td>


                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>