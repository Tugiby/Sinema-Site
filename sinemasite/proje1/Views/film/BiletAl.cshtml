@model proje1.Models.Siniflar.filmozellik
@{
    ViewBag.Title = "Bilet Al";
    Layout = "~/Views/Shared/adminlayout.cshtml";
}

<h2>Bilet Al</h2>
<br />
@using (Html.BeginForm("BiletAl", "film", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Film Seçin")
        @Html.DropDownList("filmId", new SelectList(ViewBag.Filmler, "filmid", "filmad"), "Film Seçin", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Seans Seçin")
        @Html.DropDownList("seansId", new SelectList(ViewBag.Seanslar, "seansid", "Seans"), "Seans Seçin", new { @class = "form-control" })
    </div>
    <button class="btn btn-primary">Bilet Al</button>
}
