@using proje1.Models.Siniflar
@model List<satishareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/adminlayout.cshtml";
}
<h2>Satışlar</h2>

<table class="table table-striped" style="margin-top:20px">

    <tr>
        <th>ID</th>
        <th>Film</th>
        <th>Cari</th>
        <th>Personel</th>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Toplam</th>
        <th>Tarih</th>
        <th>Salon</th>          <!-- sonradan eklendi-->
        <th>Koltuk</th>         <!-- sonradan eklendi-->
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>


    @foreach (var k in Model)
    {


        <tr>
            <td> @k.satisid</td>

            <td> @k.filmozellik.filmad</td>

            <td> @k.caribilgis.cariad @k.caribilgis.carisoyad</td>

            <td> @k.personel.personelad @k.personel.personelsoyad</td>

            <td> @k.adet</td>

            <td> @k.fiyat</td>

            <td> @k.toplamtutar</td>

            <td>@k.satistarih</td>

            <td>@k.salonlars.salonad</td>  <!-- sonradan eklendi-->

            <td>@k.koltukno</td>        <!-- sonradan eklendi-->



            <td><a href="/satis/satissil/@k.satisid" class="btn btn-danger">sil</a></td>
            <td><a href="/satis/satisgetir/@k.satisid" class="btn btn-success">Güncelle</a></td>


        </tr>

    }
</table>
<br />
<a href="/satis/yenisatis" class="btn btn-info">Yeni Satış Yap</a>

